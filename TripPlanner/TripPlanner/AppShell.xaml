<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TripPlanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TripPlanner.Views.HomeViews"
    Shell.FlyoutBehavior="Disabled">

    <TabBar Shell.TabBarTitleColor="#2B6777">
        <ShellContent Route="Home" Icon="airplane.png" Title="Wyjazdy" ContentTemplate="{DataTemplate local:HomePage}"/>
        <ShellContent Route="Friends" Icon="person.png" Title="Znajomi" ContentTemplate="{DataTemplate local:FriendsPage}"/>
        <ShellContent Route="Notifiactions" Icon="bell.png" Title="Akcje" ContentTemplate="{DataTemplate local:NotificationPage}"/>
        <ShellContent Route="Profile" Icon="user1.png" Title="Konto" ContentTemplate="{DataTemplate local:ProfilePage}"/>
    </TabBar>
</Shell>
