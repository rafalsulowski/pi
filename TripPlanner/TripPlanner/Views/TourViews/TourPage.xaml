<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripPlanner.Views.TourViews.TourPage"
             xmlns:viewmodel="clr-namespace:TripPlanner.ViewModels"
             xmlns:markups="clr-namespace:OnScreenSizeMarkup.Maui;assembly=OnScreenSizeMarkup.Maui"
             x:DataType="viewmodel:TourViewModel"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10">
            <Grid
                RowDefinitions="Auto"
                ColumnDefinitions="{markups:OnScreenSize ExtraSmall='25,*,25', Small='25,*,25', Medium='30,*,30', Large='35,*,35', ExtraLarge='50,*,50'}"
                Margin="10,5,10,0">
                <ImageButton
                    Grid.Column="0"
                    Source="{AppThemeBinding Light=arrow_back_wt.png, Dark=arrow_back_dt.png}"
                    Command="{Binding GoBackCommand}"
                    HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}"/>
                
                <Label
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='18', Large='24', ExtraLarge='35'}"
                    VerticalOptions="Center"
                    Text="{Binding Tour.Title}" />

                <ImageButton
                    Grid.Column="2"
                    Source="{AppThemeBinding Light=setting_wt.png, Dark=setting_dt.png}"
                    Command="{Binding GoSettingsCommand}"
                    HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='25', Large='35', ExtraLarge='50'}" />
            </Grid>


            <Grid
                Margin="10,0,10,0"
                RowSpacing="{markups:OnScreenSize ExtraSmall='8', Small='10', Medium='10', Large='15', ExtraLarge='20'}"
                RowDefinitions="{markups:OnScreenSize ExtraSmall='130,130,130,130', Small='130,130,130,130', Medium='130,130,130,130', Large='130,130,130,130', ExtraLarge='130,130,130,130'}"
                ColumnSpacing="{markups:OnScreenSize ExtraSmall='8', Small='10', Medium='10', Large='15', ExtraLarge='20'}"
                ColumnDefinitions="{markups:OnScreenSize ExtraSmall='130,130,130,130', Small='130,130,130,130', Medium='*,*', Large='130,130,130,130', ExtraLarge='130,130,130,130'}">
                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoChatCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="chat_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}"/>
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="czat grupowy"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoBudgetCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="cash_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}" />
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Rachunki"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoParticipantsCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="people_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}" />
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Uczestnicy"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoCalendarCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="calendar_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}" />
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Harmonogram"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoCultureCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="globe_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}" />
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Zwyczaje miejsca"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoWeatherCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="cloud_sun_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}" />
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Pogoda"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoRoutesCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="tour_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}" />
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Trasy"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    Stroke="{AppThemeBinding Light=#2B6777, Dark=White}"
                    StrokeShape="RoundRectangle 15,15,15,15"
                    BackgroundColor="#52AB98">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TourViewModel}}, Path=GoCheckListCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout
                        VerticalOptions="Center"
                        Spacing="5">
                        <Image
                            Source="checklist_dt.png"
                            HeightRequest="{markups:OnScreenSize ExtraSmall='25', Small='25', Medium='30', Large='35', ExtraLarge='50'}" />
                        <Label
                            FontSize="{markups:OnScreenSize ExtraSmall='12', Small='15', Medium='15', Large='24', ExtraLarge='35'}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Checklisty"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>